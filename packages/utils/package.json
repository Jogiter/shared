{
  "version": "0.7.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build-lib": "tsdx build",
    "build": "run-s build-lib api-ext",
    "test": "tsdx test --coverage",
    "lint": "tsdx lint",
    "prepare": "run-s build api-ext api-doc size",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "doc": "run-s api-ext api-doc",
    "api-ext": "api-extractor run",
    "api-doc": "api-documenter markdown -i ./temp -o docs/docs && rimraf temp"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tsdx lint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@nipem/utils",
  "module": "dist/utils.esm.js",
  "size-limit": [
    {
      "path": "dist/utils.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/utils.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@microsoft/api-documenter": "^7.13.1",
    "@microsoft/api-extractor": "^7.14.0",
    "@size-limit/preset-small-lib": "^4.7.0",
    "husky": "^4.3.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "size-limit": "^4.7.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
